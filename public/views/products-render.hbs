{{#if products.length}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr> <th class="text-center text-light">ID</th> <th class="text-center text-light">name</th> <th class="text-center text-light">price</th> </tr>
            {{#each products}}
                <tr>
                    <td class="text-center text-light">#{{this.id}}</td>
                    <td class="text-center text-light">{{this.name}}</td>
                    <td class="text-center text-light">${{this.price}}</td>
                </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3 class="alert alert-danger">No hay productos</h1>
{{/if}}